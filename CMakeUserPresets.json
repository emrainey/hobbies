{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug",
            "hidden": true,
            "inherits": "common",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_SHARED_LIBS": "OFF",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "15.0"
            }
        },
        {
            "name": "profiling",
            "hidden": true,
            "inherits": [
                "debug",
                "strict"
            ],
            "cacheVariables": {
                "USE_PROFILING": "ON",
                "USE_COVERAGE": "ON"
            }
        },
        {
            "name": "homebrew-gcc",
            "inherits": [
                "native-gcc",
                "Homebrew"
            ],
            "displayName": "Homebrew GCC",
            "description": "Homebrew GCC",
            "environment": {
                "PATH": "$env{HOMEBREW_PATH}:$penv{PATH}"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc-15",
                "CMAKE_CXX_COMPILER": "g++-15"
            }
        },
        {
            "name": "native-clang-mac",
            "inherits": [
                "native-clang",
                "Homebrew"
            ],
            "displayName": "Native Clang Toolchain",
            "description": "Uses the default clang in your path",
            "environment": {
                "PATH": "$env{HOMEBREW_PATH}:$penv{PATH}"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_ASM_COMPILER": "clang++"
            }
        },
        {
            "name": "homebrew-llvm",
            "displayName": "Homebrew LLVM",
            "description": "Homebrew LLVM",
            "inherits": [
                "native-llvm",
                "Homebrew",
                "debug"
            ],
            "environment": {
                "PATH": "$env{HOMEBREW_ROOT}/Cellar/llvm/20.1.8/bin/:$env{HOMEBREW_PATH}:$penv{PATH}"
            },
            "cacheVariables": {}
        },
        {
            "name": "homebrew-llvm-profiled",
            "displayName": "Homebrew LLVM w/ Profiling",
            "description": "Homebrew LLVM w/ Profiling",
            "inherits": [
                "native-llvm",
                "Homebrew",
                "profiling"
            ],
            "environment": {
                "PATH": "$env{HOMEBREW_ROOT}/Cellar/llvm/20.1.8/bin/:$env{HOMEBREW_PATH}:$penv{PATH}"
            },
            "cacheVariables": {}
        }
    ],
    "buildPresets": [
        {
            "name": "build-with-homebrew-gcc",
            "inherits": "build-common",
            "configurePreset": "homebrew-gcc"
        },
        {
            "name": "build-with-homebrew-llvm",
            "inherits": "build-common",
            "configurePreset": "homebrew-llvm"
        },
        {
            "name": "build-with-homebrew-llvm-profiled",
            "inherits": "build-common",
            "configurePreset": "homebrew-llvm-profiled"
        }
    ],
    "testPresets": [
        {
            "name": "run-tests-homebrew-gcc",
            "inherits": "test-common",
            "configurePreset": "homebrew-gcc"
        },
        {
            "name": "run-tests-llvm",
            "inherits": "test-common",
            "configurePreset": "homebrew-llvm"
        },
        {
            "name": "run-tests-llvm-profiled",
            "inherits": "test-common",
            "configurePreset": "homebrew-llvm-profiled"
        }
    ],
    "workflowPresets": [
        {
            "name": "unit-tests",
            "description": "Homebrew LLVM",
            "displayName": "Homebrew LLVM",
            "steps": [
                {
                    "type": "configure",
                    "name": "homebrew-llvm"
                },
                {
                    "type": "build",
                    "name": "build-with-homebrew-llvm"
                },
                {
                    "type": "test",
                    "name": "run-tests-llvm"
                }
            ]
        },
        {
            "name": "profiling-run",
            "description": "Homebrew LLVM with Profiling",
            "displayName": "Homebrew LLVM with Profiling",
            "steps": [
                {
                    "type": "configure",
                    "name": "homebrew-llvm-profiled"
                },
                {
                    "type": "build",
                    "name": "build-with-homebrew-llvm-profiled"
                },
                {
                    "type": "test",
                    "name": "run-tests-llvm-profiled"
                }
            ]
        }
    ]
}