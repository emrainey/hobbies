{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "world_module",
            "description": "Which World Module to Load",
            "options": [
                "world_art1",
                "world_cornell",
                "world_desktoy",
                "world_example",
                "world_glass",
                "world_lenses",
                "world_planet",
                "world_snowman",
                "world_spheres",
                "world_spheres2",
                "world_monochrome",
            ]
        }
    ],
    "configurations": [
        {
            "name": "(lldb) Launch Random Tuner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/demo_random_tuner",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "type": "lldb-mi",
            "request": "launch",
            "name": "Launch Program",
            "target": "/usr/bin/lldb",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "(lldb) GTest Raytrace",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/gtest_raytrace",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Demo Curses",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/demo_curses",
            "args": [
                "-m",
                "${input:world_module}",
                "-a",
                "128",
                "-b",
                "4"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "ABORT",
                    "value": "1"
                },
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "install/lib:raytrace/build",
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Demo OpenCV Render",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/demo_raytrace_loader",
            "args": [
                "-m",
                "${input:world_module}",
                "-a",
                "128",
                "-b",
                "4"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "ABORT",
                    "value": "1"
                },
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "install/lib:raytrace/build",
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}